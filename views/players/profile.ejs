<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to World of Pokemon!</title>
    <link rel="stylesheet" href="/css/app.css"/>
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
</head>
<body>
    <h1>Welcome to World of Pokemon, <%= player.name %>!</h1>

    <form action="/players/profile/<%= player.id %>?_method=PUT" method="POST">
        <div class="input">
            <label for="name">Name:</label>
            <input type="text" name="name" id="name" value="<%= player.name %>">
        </div>

        <div class="input">
            <label for="rival">Rival:</label>
            <input type="text" name="rival" id="rival" value="<%= player.rival %>">
        </div>

        <div class="input">
            <label for="team">Team:</label>
            <select id="team" name="team">
                <% teams.forEach(team => { %>
                    <option value="<%= team.id %>" <%= team.name === player.Team.name ? "selected" : "" %>>
                        <%= team.name %>
                    </option>
                <% }); %>
            </select>
        </div>
        
        <div class="input">
            <!-- <label for="pokemon">Pokemon:</label>
            <input type="text" name="pokemon" id="pokemon" value="<%= player.pokemon %>"> -->
            <label for="pokemon">Pokemon:</label>
            <select id="pokemon" name="pokemon">
                <% pokemon.forEach(mon => { %>
                    <option value="<%= mon.name %>" <%= mon.name === player.pokemon ? "selected" : "" %> >
                        <%= mon.name %>
                    </option>
                <% }); %>
            </select>
        </div>

        <div class="roster">
            <h3>Your Pokemon:</h3>
            <ul>
                <% player.Pokemons.forEach(mon => { %>
                    <li><%= mon.name %></li>
                <% }); %>
            </ul>
        
        </div>
        
        <input type="submit" value="Update Profile">
    </form>

    <form action="/players/profile/<%= player.id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete Profile">
    </form>

    <form action="/">
        <input type="submit" value="Return to Title">
    </form>
</body>
</html>